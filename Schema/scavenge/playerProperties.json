{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Definitions for player properties for scavenge scripts.",

    "definitions": {
        "hasAir": {
            "type": "object",
            "additionalProperties": false,
            "description": "Tests if the player has the desired amount of air.",
            "properties": {
                "property": {
                    "const": "scavenge_player:has_air"
                },

                "condition": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": [],
                    "properties": {
                        "condition": {
                            "type": "string"
                        },
                        "operations": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "additionalProperties": false,
                                "required": [],
                                "properties": {
                                    "operation": {
                                        "type": "string"
                                    },
                                    "value": {
                                        "type": "number"
                                    }
                                }
                            }
                        }
                    }
                },

                "inverted": {
                    "type": "boolean",
                    "description": "Whether the result of the test should be inverted."
                },
                
                "error_message": {
                    "type": ["string","null"],
                    "description": "Error message that should be displayed."
                },

                "error_simple": {
                    "type": "boolean",
                    "description": "If the error message should be treated as a simple string or a full ITextComponent JsonObject."
                },

                "jei_visible": {
                    "type": "boolean",
                    "description": "If the JEI description should be shown."
                },

                "jei_description": {
                    "type": "string",
                    "description": "JEI description that should be displayed."
                },

                "jei_simple": {
                    "type": "boolean",
                    "description": "If the JEI description should be treated as a simple string or a full ITextComponent JsonObject."
                }
            }
        }
    }
}